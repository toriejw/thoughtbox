-if @current_user
  = button_to "Log Out", logout_path, method: :delete

%h1 Add New Link:
=form_for @link, url: link_index_path do |f|
  Title:
  =f.text_field :title
  Url:
  =f.text_field :url
  =f.submit

%h1 Links:
#link-list
  -@links.each do |link|
    .link
      %h2= link.title
      %h3= link.url
      =content_tag :p, "Status: #{link.status}", class: link.status, id: "status-#{link.id}"

      - if link.read?
        =button_tag "Mark as unread", class: "change-button-status read-button", id: link.id
      - else
        =button_tag "Mark as read", class: "change-button-status unread-button", id: link.id

      =button_to "Edit", edit_link_path(link), method: :get
